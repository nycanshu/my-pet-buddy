{
  "manifest_version": 3,
  "name": "My Pet Buddy",
  "version": "1.0",
  "description": "Select pets to parade along your browser edge!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pets.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}
